    public void insert_map(String x,String y,Integer amt){
       
           if(net_amount.containsKey(x)==false)
               net_amount.put(x,0);
           if(net_amount.containsKey(y)==false)
               net_amount.put(y,0);
            net_amount.put(x, net_amount.get(x)-amt);
             net_amount.put(y, net_amount.get(y)+amt);
            
            String str="values added :"+"\n"+x+" "+y+" "+ amt;
             JOptionPane.showMessageDialog(this, str);
               jTextField2.setText("");
                 jTextField3.setText("");
                   jTextField4.setText("");
           
           
       }
    private void spilt() {
        if(net_amount.isEmpty()){
            jTextArea1.setText("nobody needs to pay anything ");
            return  ;}
        net_amount.values().remove(0);
        for (Map.Entry<String,Integer> entry : net_amount.entrySet()) 
        {
          if(entry.getValue()==0)
              net_amount.remove(entry.getKey());
              
        }
        
        while(!net_amount.isEmpty()){
            String debit_person = Collections.min(net_amount.keySet());
            int debit=net_amount.get(debit_person);
            String credit_person = Collections.max(net_amount.keySet());
            int credit=net_amount.get(credit_person);
            //settlements
            
            int settled_amount=Math.min(Math.abs(debit),credit);
            debit+=settled_amount;
            credit-=settled_amount;
            
          //  System.out.println(debit_person+" will pay "+settled_amount+" to "+credit_person);
            jTextArea1.append(debit_person+"  will pay "+settled_amount+" to "+credit_person+"\n");
            net_amount.remove(debit_person);
            net_amount.remove(credit_person);
            if(debit!=0){
            net_amount.put(debit_person, debit);}
            
            if(credit!=0){
            net_amount.put(credit_person, credit);}
            
            
       }
            
        
  
    }

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
         String str1=jTextField4.getText();
       String str2=jTextField2.getText();
       Integer amt=Integer.parseInt(jTextField3.getText());
        insert_map(str1,str2,amt);
    }                                        

    private void jTextField2ActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    }                                           

    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
         spilt();
    }                                        

